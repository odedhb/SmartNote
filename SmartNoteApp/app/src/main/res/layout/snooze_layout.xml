<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="6dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/animation_holder"
        android:background="@android:color/transparent"
        android:layout_height="88dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/confirmation_view"
        android:background="@color/task_background"
        android:layout_height="wrap_content"
        android:padding="4dp">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:id="@+id/month_short"
                    android:layout_marginBottom="6dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:id="@+id/day_in_month"
                    android:textSize="22sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <TextView
                android:id="@+id/relative_date"
                android:text="@string/time"
                android:textStyle="bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <Button
                android:id="@+id/ok_button"
                android:background="@drawable/selector_confirmation"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/snooze"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:padding="2dp" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:id="@+id/snooze_history_help_text"
            android:layout_height="wrap_content"
            android:text="Or select previous time:"
            android:textAlignment="center"
            android:textColor="#fff"
            android:padding="30dp"

            />


        <Button
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/button1"
            android:background="@drawable/selector_past_date"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/button2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="@drawable/selector_past_date"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <Button
            android:id="@+id/button3"
            android:visibility="gone"
            android:background="@drawable/selector_past_date"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

    </LinearLayout>

</LinearLayout>